{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/dashboard",
        "destination": "/attendance/dashboard.html"
      },
      {
        "source": "/event",
        "destination": "/attendance/event.html"
      },
      {
        "source": "/qr",
        "destination": "/attendance/qr.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs18"
  }
}
